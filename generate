#!/bin/bash 

#Three regions of J1/J3 which are interesting
for i in -9.400 -9.100 -8.800 -8.500 -8.200 -7.900 -7.600 -7.300 -7.000 -6.700 -6.400 -6.100 -5.800 -5.500 -5.200 -4.900 -4.600 -4.300 -4.000 -3.700 -3.400 -3.100 -2.800 -2.500 -2.200 -1.900 -1.600 -1.300 -1.000 -0.700 -0.400 -0.100 0.200 0.500 0.800 1.100 1.400 1.700 2.000 2.300 2.600 2.900 3.200 3.500 3.800 4.100 4.400 4.700 5.000 5.300 5.600 5.900 6.200 6.500 6.800 7.100 7.400 7.700 8.000 8.300 8.600 8.900 9.200 9.500 9.800 10.000
do
	echo "Testing J1=J2=$i, J3=1.0, generating figure. Lattice size 8, beta 0 to 5."
	./D_2d C 0.0 5.0 0.05 0.1 1.0 2.5 0.05 E D2d_test.dat $i $i 1.0 2000 >> D2d_test.dat; 
	gnuplot figure.plt 
	mv figure.png "figure_$i.png"
	mv D2d_test.dat "data_$i.dat"
done 
