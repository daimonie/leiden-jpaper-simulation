#!/bin/bash 

#Three regions of J1/J3 which are interesting
for i in 0.000 0.050 0.100 0.150 0.200 0.250
do
	echo "Testing J1=J2=$i, J3=1.0, generating figure. Lattice size 8, beta 0 to 5."
	./D_2d C 0.0 5.0 0.01 0.05 1.0 2.5 0.05 E D2d_test.dat $i $i 1.0 2000 >> D2d_test.dat; 
	gnuplot figure.plt 
	mv figure.png "figure_$i.png"
	mv D2d_test.dat "data_$i.dat"
done


for i in 0.300 0.310 0.320 0.330 0.340 0.350 0.360 0.370 0.380 0.390 0.400 0.410 0.420 0.430 0.440 0.450 0.460 0.470 0.480 0.490 0.500 0.510 0.520 0.530 0.540 0.550 0.560 0.570 0.580 0.590 0.600 0.610 0.620 0.630 0.640 0.650 0.660 0.670 0.680 0.690 0.700 0.710 0.720 0.730 0.740 0.750 0.760 0.770 0.780 0.790
do
	echo "Testing J1=J2=$i, J3=1.0, generating figure. Lattice size 8, beta 0 to 5."
	./D_2d C 0.0 5.0 0.005 0.05 1.5 3.5 0.05 E D2d_test.dat $i $i 1.0 2000 >> D2d_test.dat; 
	gnuplot figure.plt 
	mv figure.png "figure_$i.png"
	mv D2d_test.dat "data_$i.dat"
done



for i in 0.800 0.850 0.900 0.950 1.000 1.050 1.100 1.150 1.200 1.250 1.300 1.350 1.400 1.450 1.500 1.550 1.600 1.650 1.700 1.750 1.800 1.850 1.900 1.950 2.000 2.050 2.100 2.150 2.200 2.250 2.300 2.350 2.400 2.450 2.500 2.550 2.600 2.650 2.700 2.750 2.800 2.850 2.900 2.950 3.000
do
	echo "Testing J1=J2=$i, J3=1.0, generating figure. Lattice size 8, beta 0 to 5."
	./D_2d C 0.0 5.0 0.01 0.05 .5 1.5 0.05 E D2d_test.dat $i $i 1.0 2000 >> D2d_test.dat; 
	gnuplot figure.plt 
	mv figure.png "figure_$i.png"
	mv D2d_test.dat "data_$i.dat"
done 
